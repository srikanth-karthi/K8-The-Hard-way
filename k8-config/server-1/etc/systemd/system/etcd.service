[Unit]
Description=etcd
Documentation=https://github.com/etcd-io/etcd

[Service]
Type=notify
ExecStart=/usr/local/bin/etcd \
  --name server-1 \
  --initial-advertise-peer-urls http://10.240.0.71:2380 \
  --listen-peer-urls http://10.240.0.71:2380 \
  --listen-client-urls http://10.240.0.71:2379,http://127.0.0.1:2379 \
  --advertise-client-urls http://10.240.0.71:2379 \
  --initial-cluster-token etcd-cluster-0 \
  --initial-cluster server-0=http://10.240.0.70:2380,server-1=http://10.240.0.71:2380 \
  --initial-cluster-state new \
  --data-dir=/var/lib/etcd
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target

